<div class="container">
    <h2>Today's Recent</h2>
    <table>
        <tbody>
            <% @cats.last(25).in_groups_of(5).each do |group| %>
                <tr>
                    <% group.each do |cat| %>
                        <% if cat and Favorites.where(:catid => cat.id, :userid => current_user.id) != [] %>
                            <td style="padding: 20px; background-color: LightGreen; border: 5px solid #eee">
                                <h3><%= cat.title %></h3>
                                <p>Likes: <%= cat.likes %></p>
                                <p>Tag: <%= cat.tag %></p>
                                <p><%= link_to "Comments", cat_path(:id => cat.id) %></p>
                                <p><%= image_tag cat.image.url %></p>
                                <% if current_user != nil %>
                                  <% if Favorites.where(:catid => cat.id, :userid => current_user.id) == [] %>
                                    <%= button_to "Favorite this pic!", favorite_path(id: cat.id, instruction: "Favorite"), :class => "button small", :method => :patch %>
                                  <% end %>
                                  <% if Favorites.where(:catid => cat.id, :userid => current_user.id) != [] %>
                                  <% favorite = Favorites.where(:catid => cat.id, :userid => current_user.id).first %>
                                   <p><%= button_to "Remove Favorite", favorite_path(id: favorite.id, instruction: "delete"), :class => "button small", :method => :delete %></p>
                                   <% end %>
                                <% end %>
                            </td>
                        <% end %>
                        <% if cat and Favorites.where(:catid => cat.id, :userid => current_user.id) == [] %>
                            <td style="padding: 20px; border: 5px solid #eee">
                                <h3><%= cat.title %></h3>
                                <p>Likes: <%= cat.likes %></p>
                                <p>Tag: <%= cat.tag %></p>
                                <p><%= link_to "Comments", cat_path(:id => cat.id) %></p>
                                <p><%= image_tag cat.image.url %></p>
                                 <% if current_user != nil %>
                                  <% if Favorites.where(:catid => cat.id, :userid => current_user.id) == [] %>
                                    <%= button_to "Favorite this pic!", favorite_path(id: cat.id, instruction: "Favorite"), :class => "button small", :method => :patch %>
                                  <% end %>
                                  <% if Favorites.where(:catid => cat.id, :userid => current_user.id) != [] %>
                                  <% favorite = Favorites.where(:catid => cat.id, :userid => current_user.id).first %>
                                   <p><%= button_to "Remove Favorite", favorite_path(id: favorite.id, instruction: "delete"), :class => "button small", :method => :delete %></p>
                                   <% end %>
                                <% end %>
                            </td>
                        <% end %>
                        <% if not cat %>
                            <td></td>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
